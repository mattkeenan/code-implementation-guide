#!/bin/sh
# Script: cig-find-task-numbering-structure
# Version: v0.1.1-5-gcea1c19
# Source: https://github.com/OWNER/REPO
# Purpose: Finds numbered directories in implementation guide for task sequencing
# Replaces: find implementation-guide -type d -name "*-*" | grep -E "/[0-9]+-" | sort

if [ ! -d "implementation-guide" ]; then
    echo "No implementation guide directory found"
    exit 0
fi

find implementation-guide -type d -name "*-*" | grep -E "/[0-9]+-" | sort