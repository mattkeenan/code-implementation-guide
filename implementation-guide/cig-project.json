{
  "project-name": "Code Implementation Guide (CIG)",
  "description": "Structured task management system for software development using Claude Code integration",
  "version": "v0.1.1-5-gcea1c19",
  "supported-task-types": [
    "feature",
    "bugfix", 
    "hotfix",
    "chore"
  ],
  "branch-naming-convention": "{{task-type}}/{{task-id}}-{{description-slug}}",
  "task-tracking": {
    "system": "github-issues",
    "base-url": "https://github.com/anthropics/claude-code/issues",
    "id-format": "issues-{{number}}",
    "fallback": {
      "description": "For tasks without GitHub issues yet",
      "id-format": "internal-{{number}}",
      "migration-notes": "Replace internal-N with issues-N when GitHub issue created"
    }
  },
  "directory-structure": {
    "base-path": "implementation-guide",
    "pattern": "{{task-type}}/{{task-number}}-{{description-slug}}",
    "max-depth": 5
  },
  "templates": {
    "feature": [
      "plan.md",
      "requirements.md", 
      "design.md",
      "testing.md",
      "rollout.md",
      "maintenance.md"
    ],
    "bugfix": [
      "plan.md",
      "implementation.md",
      "testing.md", 
      "rollout.md"
    ],
    "hotfix": [
      "plan.md",
      "implementation.md",
      "rollout.md"
    ],
    "chore": [
      "plan.md",
      "implementation.md",
      "validation.md",
      "maintenance.md"
    ]
  },
  "workflow": {
    "required-sections": [
      "Task Reference",
      "Goal", 
      "Current Status"
    ],
    "status-values": [
      "Not Started",
      "In Progress", 
      "Blocked",
      "Completed"
    ]
  },
  "integration": {
    "claude-code": {
      "commands-path": ".claude/commands",
      "autoload-config": ".cig/autoload.yaml",
      "utils-path": ".cig/utils",
      "templates-path": ".cig/templates"
    }
  },
  "security": {
    "version-tracking": "v0.1.1-5-gcea1c19",
    "canonical-source": {
      "type": "github",
      "repository": "OWNER/REPO",
      "base-url": "https://api.github.com/repos/OWNER/REPO/contents",
      "verification-ref": "main"
    },
    "file-integrity": {
      "commands": ".claude/commands/cig-*.md",
      "scripts": ".cig/scripts/command-helpers/cig-*",
      "hash-algorithm": "sha256"
    }
  }
}